{
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "rules": {
    "indent": ["error", 4, {"SwitchCase": 1}],
    "arrow-body-style": "off",
    "class-methods-use-this": "off",
    "object-curly-spacing": [2, "never"],
    "max-len": [1, 200, 2],
    "no-param-reassign": "off",
    "no-return-assign": "off",
    "no-plusplus": "off",
    "prefer-destructuring": ["error", {
      "array": false,
      "object": true
    }],
    "global-require": "off"
  },
  "globals": {
    "ga": true,
    "gtag": true,
    "gtag_report_conversion": true,
    "mina": true
  }
}
